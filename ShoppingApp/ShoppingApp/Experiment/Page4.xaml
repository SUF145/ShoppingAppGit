<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="ShoppingApp.Experiment.Page4">
    <ContentPage.Content>

        <StackLayout Margin="50">
            <Label Text="Thank you for shopping with us! Your order has been confirmed" TextColor="Black" FontSize="Large" Margin="10,20,10,20" HorizontalOptions="Center" HorizontalTextAlignment="Center"/>
            <Label Text="Continue shopping with us!" TextColor="Black" FontSize="Medium" HorizontalOptions="Center" Margin="0,0,0,10"/>
            <Button Text="Explore More" x:Name="ExploreMoreButton" CornerRadius="20" Margin="50,0,50,0" Clicked="ExploreMoreButton_Clicked"/>

        </StackLayout>

    </ContentPage.Content>
</ContentPage>

