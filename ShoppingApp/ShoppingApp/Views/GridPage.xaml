                <Button Text="Buy Now" WidthRequest="70" CornerRadius="20" VerticalOptions="Center" BackgroundColor="#2196F3" Margin="10,20,10,10"/>
                </StackLayout>
            </Frame>


            <Frame Grid.Row="1" Grid.Column="0" Padding="10,5,10,10" HasShadow="False">
